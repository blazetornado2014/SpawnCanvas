{
  "manifest_version": 3,
  "name": "SpawnCanvas",
  "version": "0.1.0",
  "description": "A persistent floating canvas overlay for project planning.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Toggle SpawnCanvas"
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["canvas/app.js", "content/overlay-manager.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "canvas/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
